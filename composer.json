{
  "name": "palmtree/collection",
  "description": "Collection component for Palmtree PHP",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Andy Palmer",
      "email": "andy@andypalmer.me",
      "homepage": "https://andypalmer.me"
    }
  ],
  "autoload": {
    "psr-4": {
      "Palmtree\\Collection\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Palmtree\\Collection\\Test\\Fixture\\": "tests/fixtures"
    }
  },
  "require": {
    "php": ">=7.1"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "~3.3",
    "phpunit/phpunit": "~7.2|~5.7"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "sniff": "./vendor/bin/phpcs --report=full",
    "lint": "find -L .  -path ./vendor -prune -o -type f -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l"
  }
}
